datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL_WITH_SCHEMA")
}

model Task {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  description String
  isCompleted Boolean   @default(false)
  createdAt   DateTime? @default(now())
  updatedAt   DateTime  @updatedAt
}
